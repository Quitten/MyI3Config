# Core Apps:
#
	exec compton
	exec volnoti
	exec killall notify-osd
	exec_always dunst
	exec indicator-sound-switcher
	exec --no-startup-id nm-applet
	exec --no-startup-id /usr/bin/gnome-settings-daemon
#
# User Apps:
#
	exec chromium
	exec ulimit -c unlimited
	exec ~/Downloads/Station-1.52.2-x86_64.AppImage
	exec bluetoothctl power on
	exec /home/barak/scripts/burp.sh
	exec_always ~/scripts/changeWallpaper.sh
	exec_always "/bin/bash ~/.fehbg"
	
#
# User Binds:
#
	# Cursor
	bindsym $mod+Right+Control exec "~/scripts/moveMouse.sh right"
	bindsym $mod+Left+Control exec "~/scripts/moveMouse.sh left"
	bindsym $mod+Up+Control exec "~/scripts/moveMouse.sh up"
	bindsym $mod+Down+Control exec "~/scripts/moveMouse.sh down"

	# Volume
	bindsym XF86AudioRaiseVolume exec --no-startup-id ~/scripts/vol.sh up
	bindsym XF86AudioLowerVolume exec --no-startup-id ~/scripts/vol.sh down
	bindsym XF86AudioMute exec --no-startup-id ~/scripts/vol.sh mute

	# Scrachpad
	bindsym $mod+bracketright [instance="station*"] scratchpad show, resize set 1000 800
	bindsym $mod+bracketleft [instance="station*"] scratchpad show, resize set 1000 800

	# Brightness control
	bindsym XF86MonBrightnessUp exec --no-startup-id ~/scripts/bright_up.sh
	bindsym XF86MonBrightnessDown exec --no-startup-id ~/scripts/bright_down.sh
	
	# Misc
	bindsym --release Print exec ~/scripts/screenshot.sh
	bindcode $mod+54 exec ~/scripts/chlang.sh
	exec greenclip daemon
    	bindsym $mod+v exec rofi -modi "clipboard:greenclip print" -show clipboard -run-command '{cmd}'
	
	# Displays
	exec_always i3-msg "workspace 1, move workspace to output eDP-1"
	exec_always i3-msg "workspace 2, move workspace to output 'Dell Inc. DELL U2412M YPPY089T1BWB'"
	exec_always i3-msg "workspace 3, move workspace to output 'Dell Inc. DELL U2412M YPPY076D19FS'"
    
	exec_always swaymsg output eDP-1 scale 2
	exec_always swaymsg output eDP-1 position 0 0
	exec_always swaymsg output '"Dell Inc. DELL U2412M YPPY089T1BWB"' position 1920 0
	exec_always swaymsg output '"Dell Inc. DELL U2412M YPPY076D19FS"' position 3840 0
    
